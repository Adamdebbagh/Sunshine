<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity$PlaceholderFragment"
                android:background="#00efff">

    <TextView
        android:text="@string/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="91dp"
        android:id="@+id/today_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/highTemp"
        android:id="@+id/highTemp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/today_date"
        android:layout_alignLeft="@+id/today_date"
        android:layout_alignStart="@+id/today_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lowTemp"
        android:id="@+id/lowTemp"
        android:layout_below="@+id/highTemp"
        android:layout_alignLeft="@+id/highTemp"
        android:layout_alignStart="@+id/highTemp"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/weatherStatus"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/lowTemp"
        android:layout_toRightOf="@+id/today_date"
        android:layout_toEndOf="@+id/today_date"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherImage"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:contentDescription="weather image"
        android:src="@drawable/ic_launcher"/>

</RelativeLayout>
